<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nazwa gracza:"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/userImage"
        app:layout_constraintTop_toTopOf="@+id/userImage"
        android:layout_marginTop="22dp"
        android:layout_marginStart="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wyloguj mnie"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/nameText"
        app:layout_constraintStart_toStartOf="@id/nameText"
        />

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/img_4"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PlanszÃ³wki"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/gamesButton"
        app:layout_constraintStart_toStartOf="@id/gamesButton"
        app:layout_constraintEnd_toEndOf="@id/gamesButton"
        android:fontFamily="monospace"
        />

    <ImageButton
        android:id="@+id/gamesButton"
        android:layout_width="190dp"
        android:layout_height="190dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userImage"
        android:layout_marginTop="130dp"
        android:src="@drawable/img_3"
        android:scaleType="fitXY"
        android:background="@drawable/circle_button"
        android:layout_marginStart="10dp"
        />

    <ImageButton
        android:id="@+id/addonsButton"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:src="@drawable/img_5"
        android:scaleType="fitXY"
        android:background="@drawable/circle_button"
        app:layout_constraintTop_toBottomOf="@+id/userImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="Rozszerzenia"
        app:layout_constraintTop_toBottomOf="@id/addonsButton"
        app:layout_constraintEnd_toEndOf="@id/addonsButton"
        app:layout_constraintStart_toStartOf="@+id/addonsButton"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ostatnia synchronizacja: "
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>